@model Database.Models.Student

@{
    string error = ViewBag.error;
}

<div class="container">
    <h1 class="my-4">Přihlášení</h1>

    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Email, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password, new { @class = "control-label" })
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
        </div>

        @if (!string.IsNullOrEmpty(error))
        {
            <div class="alert alert-danger">
                @error
            </div>
        }

        <div class="form-group d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">Přihlásit</button>
            <a href="@Url.Action("Register")" class="btn btn-link">Registrovat</a>
        </div>
    }
</div>