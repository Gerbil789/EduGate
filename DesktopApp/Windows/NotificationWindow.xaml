<Window x:Class="DesktopApp.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Height="160" Width="300" ResizeMode="NoResize"
        Icon="../Img/vsb.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="MessageLabel" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" >notification</Label>
        <Button Content="Okey" Grid.Row="1" Click="Confirm" Width="100" Height="20" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</Window>
