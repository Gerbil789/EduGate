@page
@model FormModel
@{
  ViewData["Title"] = "Přihláška";
}

<form method="post" class="form-container">
  <div class="form-group row">
    <label class="col-4 col-form-label">Jméno:</label>
    <div class="col-8 d-flex align-items-center">
      <input type="text" class="form-control mr-2" placeholder="Jméno" />
      <input type="text" class="form-control"  placeholder="Příjmení" />
    </div>
  </div>

  <div class="form-group row">
    <label class="col-4 col-form-label">Datum narození:</label>
    <div class="col-8">
      <input type="date" class="form-control"  />
    </div>
  </div>

  <div class="form-group row">
    <label class="col-4 col-form-label">Místo narození:</label>
    <div class="col-8">
      <input type="text" class="form-control"  />
    </div>
  </div>

  <div class="form-group row mt-4">
    <div class="col offset-4 col-8">
      <button type="submit" class="btn btn-primary">Odeslat</button>
    </div>
  </div>
</form>

<style>
  .form-container {
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 20px;
  }

  .form-group {
    margin-bottom: 1rem;
  }
</style>
